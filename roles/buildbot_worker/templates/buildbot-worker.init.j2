#!/bin/bash
#
# {{ ansible_managed }}
#
# buildbot-worker  Start up the Buildbot Worker daemon
#
# chkconfig: 2345 55 25
# description: Buildbot is a distributed CI build system.
#
### BEGIN INIT INFO
# Required-Start: $local_fs $network $syslog
# Required-Stop: $local_fs $syslog
# Should-Start: $syslog
# Should-Stop: $network $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start up the Buildbot Worker daemon
# Description:       Buildbot is a distributed CI build system.
### END INIT INFO

case "$1" in
start)
    sudo -u {{ buildbot_user.name }} {{ buildbot_worker_basedir }}/buildbot-worker-start.sh
    RETVAL=$?
    ;;
stop)
    sudo -u {{ buildbot_user.name }} {{ buildbot_worker_basedir }}/buildbot-worker-stop.sh
    RETVAL=$?
    ;;
status)
    sudo -u {{ buildbot_user.name }} {{ buildbot_worker_basedir }}/buildbot-worker-status.sh
    RETVAL=$?
    ;;
*)
    echo "Usage: buildbot-worker {start|stop|status}"
    RETVAL=2
esac
exit $RETVAL
